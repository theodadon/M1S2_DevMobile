<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Titre -->
        <TextView
            android:text="Lecture + authentification d’une CNIe"
            style="@style/TextAppearance.Material3.HeadlineSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"/>

        <!-- CAN -->
        <EditText
            android:id="@+id/etCan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CAN (6 chiffres)"
            android:inputType="number"
            android:maxLength="6"/>

        <!-- Boutons -->
        <Button
            android:id="@+id/btnScan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scanner la carte"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <Button
                android:id="@+id/btnTestValid"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Test Valide"/>
            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btnTestInvalid"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Test Pas Valide"/>
        </LinearLayout>
        <Button
            android:id="@+id/btnTestApi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Test API Emoji"/>

        <!-- Séparateur -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="16dp"
            android:background="@color/black"/>

        <!-- Log user-friendly -->
        <TextView
            android:id="@+id/tvLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Photo -->
        <ImageView
            android:id="@+id/ivPhoto"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="12dp"
            android:alpha="0"
            android:scaleType="centerCrop"/>

        <!-- Emoji -->
        <TextView
            android:id="@+id/tvEmoji"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="8dp"/>

        <!-- RAW dump / stacktrace -->
        <TextView
            android:id="@+id/tvRawData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="8dp"
            android:background="#EEEEEE"
            android:textIsSelectable="true"
            android:scrollbars="vertical"/>
    </LinearLayout>
</ScrollView>

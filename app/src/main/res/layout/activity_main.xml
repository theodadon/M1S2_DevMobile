<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:padding="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Titre -->
        <TextView
            android:text="Lecture + authentification dâ€™une CNIe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:textAlignment="center"
            android:textColor="@color/text_primary"
            android:textSize="24sp"/>

        <!-- CAN -->
        <EditText
            android:id="@+id/etCan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CAN (6 chiffres)"
            android:inputType="number"
            android:maxLength="6"
            android:background="@drawable/bg_edittext"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <!-- Bouton Scanner -->
        <Button
            android:id="@+id/btnScan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“· Scanner la carte"
            android:backgroundTint="@color/primary_button"
            android:textColor="@android:color/white"
            android:layout_marginBottom="12dp"/>

        <!-- Boutons Test -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnTestValid"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="âœ… Test Valide"
                android:backgroundTint="@color/valid_button"
                android:textColor="@android:color/white"/>

            <Space
                android:layout_width="12dp"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnTestInvalid"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="âŒ Test Pas Valide"
                android:backgroundTint="@color/invalid_button"
                android:textColor="@android:color/white"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnTestApi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸŒ Test API Emoji"
            android:backgroundTint="@color/api_button"
            android:textColor="@android:color/white"
            android:layout_marginBottom="20dp"/>

        <!-- SÃ©parateur -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/separator_color"
            android:layout_marginBottom="20dp"/>

        <!-- Log -->
        <TextView
            android:id="@+id/tvLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="16dp"/>

        <!-- Photo -->
        <ImageView
            android:id="@+id/ivPhoto"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:alpha="0"
            android:background="@drawable/bg_image"
            android:scaleType="centerCrop"/>

        <!-- Emoji -->
        <TextView
            android:id="@+id/tvEmoji"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:gravity="center"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="16dp"/>

        <!-- RAW Data -->
        <TextView
            android:id="@+id/tvRawData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/separator_color"
            android:padding="12dp"
            android:textIsSelectable="true"
            android:scrollbars="vertical"
            android:layout_marginBottom="20dp"
            android:textSize="14sp"
            android:textColor="@color/text_primary"/>
    </LinearLayout>
</ScrollView>
